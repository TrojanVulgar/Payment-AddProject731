<resources>

    <!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="android:statusBarColor">@color/colorAccent</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
		<item name="android:windowBackground">@color/colorWindowBg</item>
		<item name="editTextStyle">@style/AppTheme.EditText</item>
		<item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
		<item name="buttonStyle">@style/AppTheme.Button</item>
		<item name="android:fontFamily">@font/font_arial</item>
    </style>

	<style name="AppTheme.Splash" parent="AppTheme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowBackground">@drawable/bg_splash</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
	</style>

	<style name="AppTheme.ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
		<item name="android:indeterminateTint">@color/colorProgress</item>
	</style>

	<style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
		<item name="android:colorControlNormal">@color/colorWhite</item>
		<item name="android:colorControlActivated">@color/colorGold</item>
		<item name="android:colorControlHighlight">@color/colorGold</item>
	</style>

	<style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
		<item name="android:minHeight">@dimen/et_height</item>
		<item name="android:padding">@dimen/small_view_padding</item>
		<item name="android:textSize">@dimen/et_text_size</item>
		<item name="android:background">@drawable/shape_rounded_view</item>
		<item name="android:backgroundTint">@color/colorPrimary</item>
		<item name="android:textColorHint">@color/colorSecondaryText</item>
		<item name="android:textColor">@color/colorPrimaryText</item>
	</style>

	<style name="AppTheme.Button" parent="Widget.AppCompat.Button">
		<item name="android:paddingStart">@dimen/btn_side_padding</item>
		<item name="android:paddingEnd">@dimen/btn_side_padding</item>
		<item name="android:minHeight">@dimen/btn_height</item>
		<item name="android:background">@drawable/shape_with_ripple_effect</item>
		<item name="android:gravity">center|center_vertical</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="AppTheme.Button.Small" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/shape_with_ripple_effect</item>
		<item name="android:gravity">center|center_vertical</item>
		<item name="android:minHeight">@dimen/default_size</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="AppTheme.Button.Primary">
		<item name="android:backgroundTint">@color/colorPrimary</item>
		<item name="android:textColor">@color/colorWhite</item>
	</style>

	<style name="AppTheme.Button.Secondary">
		<item name="android:backgroundTint">@color/colorWhite</item>
		<item name="android:textColor">@color/colorPrimary</item>
	</style>

	<style name="AppTheme.Button.Tasks">
		<item name="android:backgroundTint">@color/colorGold</item>
		<item name="android:textColor">@color/colorWhite</item>
	</style>

	<style name="AppTheme.Button.PolicyAccept">
		<item name="android:backgroundTint">@color/colorPolicyAccept</item>
		<item name="android:textColor">@color/colorPrimary</item>
	</style>

	<style name="AppTheme.Button.PolicyReject">
		<item name="android:backgroundTint">@color/colorPolicyReject</item>
		<item name="android:textColor">@color/colorPrimary</item>
	</style>

	<style name="AppTheme.Button.Quiz">
		<item name="android:background">@drawable/shape_quiz_with_ripple_effect</item>
		<item name="android:textColor">@color/colorWhite</item>
	</style>

	<style name="AppTheme.Button.Cards">
		<item name="android:backgroundTint">@color/colorCardViewButtonBg</item>
		<item name="android:textColor">@color/colorWhite</item>
	</style>

	<style name="AppTheme.BorderlessButtonEnabled" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textAllCaps">true</item>
		<item name="background">@drawable/ripple</item>
	</style>

	<style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:backgroundTint">@color/colorWhite</item>
		<item name="android:windowBackground">@drawable/shape_rounded_view</item>
		<item name="android:colorAccent">@color/colorAccent</item>
	</style>

	<style name="ToolbarTheme">
		<item name="android:textColorPrimary">@color/colorWhite</item>
		<item name="android:textColorSecondary">@color/colorWhite</item>
	</style>
</resources>
