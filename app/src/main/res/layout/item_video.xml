<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/item_partner_height"
	android:elevation="@dimen/elevation_layout_padding">

	<ImageView
		android:id="@+id/ivBackground"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/bg_video_card_1"
		android:layout_marginBottom="@dimen/layout_margin"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tvVideoTitle"
		android:layout_width="@dimen/empty_dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/layout_margin"
		android:layout_marginStart="@dimen/layout_margin"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/default_text_size"
		android:maxLines="2"
		android:ellipsize="end"
		android:layout_marginEnd="@dimen/half_layout_margin"
		app:autoSizeTextType="uniform"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toStartOf="@id/tvRewarded"
		tools:text="Zadanie #80asdf asdf asdf asdf as dfasdf as fasdf asdf asdf asd fasd fasdf asd fasd fasd fasd fasdf a asdf asdf sadfsadfsadf"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#B3FFFFFF"
		android:text="@string/adds_warning"
		android:textSize="@dimen/small_text_size"
		android:layout_marginTop="@dimen/tiny_layout_margin"
		app:layout_constraintTop_toBottomOf="@id/tvVideoTitle"
		app:layout_constraintStart_toStartOf="@id/tvVideoTitle"/>

	<TextView
		android:id="@+id/tvRewarded"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/layout_margin"
		android:layout_marginEnd="@dimen/layout_margin"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/title_text_size"
		android:drawableEnd="@drawable/ic_coin_small"
		android:drawablePadding="@dimen/tiny_weeny_layout_margin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="+20"/>

	<ImageButton
		android:id="@+id/btnVideoStart"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/shape_circle_button_ripple_effect"
		android:elevation="@dimen/layout_margin"
		android:src="@drawable/ic_play_arrow"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>