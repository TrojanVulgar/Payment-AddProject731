<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/mid_view_padding">

	<TextView
		android:id="@+id/tv_simple_dialog_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:padding="@dimen/mid_view_padding"
		android:text="@string/app_name"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/dialog_title"/>

	<TextView
		android:id="@+id/tv_info_simple_dialog_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/mid_view_padding"
		android:textColor="@color/colorSecondaryText"
		android:textSize="@dimen/dialog_description"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginEnd="@dimen/layout_margin"
		android:layout_marginStart="@dimen/layout_margin"
		android:background="@color/colorDivider"/>

	<Button
		android:id="@+id/btn_info_simple_dialog_ok"
		style="@style/AppTheme.BorderlessButtonEnabled"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="@dimen/layout_margin"
		android:text="@android:string/ok"
		android:textSize="@dimen/default_text_size"/>

</LinearLayout>